<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/list_item_margin">

    <LinearLayout style="@style/ListItem1">

        <LinearLayout style="@style/ListItem2">

            <TextView
                android:id="@+id/name_product_text_view"
                style="@style/ListItemText"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/list_item_textview_Right"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                tools:text="product name" />
        </LinearLayout>

        <LinearLayout
            style="@style/ListItem2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_quantity_text_view"
                style="@style/ListItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                tools:text="product quantity" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/ListItem1">

        <LinearLayout style="@style/ListItem2">

            <LinearLayout style="@style/ListItem2">

                <TextView
                    android:id="@+id/product_price_text_view"
                    style="@style/ListItemText"
                    android:layout_width="wrap_content"
                    tools:text="product price" />
            </LinearLayout>

            <LinearLayout style="@style/ListItem2">

                <LinearLayout style="@style/ListItem1">

                    <LinearLayout style="@style/ListItem2">

                        <Button
                            android:id="@+id/sale_button"
                            style="@style/ButtonStyle"
                            android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                            android:text="Sale" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ListItem2"
                        android:layout_width="2dp"
                        android:layout_marginLeft="@dimen/list_item_linearlayout_Left">

                        <Button
                            android:id="@+id/edit_button"
                            style="@style/ButtonStyle"
                            android:drawableLeft="@drawable/ic_create_black_24dp"
                            android:text="Edit" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>